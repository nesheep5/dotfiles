[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[user]
	name = shogo.watanabe
	email = shogo.watanabe@dena.com
[credential]
	helper = osxkeychain
[core]
	excludesfile = /Users/shogo.watanabe/.gitignore_global
	autocrlf = input
	quotepath = false
	attributesfile = /Users/shogo.watanabe/.gitattributes
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[color]
	ui = auto
[alias]
	st = status
	co = checkout
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[diff "xlsx"]
    binary = true
    textconv = $GOPATH/bin/git-xlsx-textconv
